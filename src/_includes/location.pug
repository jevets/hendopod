h2.text-center.mb-16.text-4xl.font-bold.leading-tight Contact Info

.max-w-lg.mx-auto
  .my-4.flex.flex-wrap.justify-between.items-center
    .mb-4.w-full(class="md:w-1/2")
      p.my-4.text-center
        img.max-w-full.shadow-md.border(
          src="/img/hendersonville-podiatry-office-nc.jpg"
          alt="Office building"
        )
    .mb-4.w-full.text-center(class="md:w-1/2 md:text-left")
      - var address = company.location.address
      p.font-bold Address
      .mb-4.leading-normal.text-grey-darkest
        include /_address
        br
        a(
          href=company.location.gmapURL
          target="_blank"
        ) Map &amp; Directions &raquo;
      p.font-bold Phone
      p.mb-4.leading-normal.text-grey-darkest= company.phone
      p.font-bold Fax
      p.mb-4.leading-normal.text-grey-darkest= company.fax

